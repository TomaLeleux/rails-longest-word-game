<h1>New game</h1>

<ul class="list-inline">
  <% @letters.each do |letter| %>
    <li class="list-inline-item text-center"><%= letter %></li>
  <% end %>
</ul>

<div class="info">What is the longest word you can find? :</div>
<form class="form-inline ask" action="score">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input class="form-control col-6 textarea" type="text" name="word">
  <input class="btn btn-primary" type="submit" value="Ask!">
  <input id="grid" name="grid" type="hidden" value=<%= "'#{@letters.join}'" %> />
</form>
